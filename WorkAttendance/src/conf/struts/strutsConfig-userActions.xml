<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!--JSON-->
	<package name="user-common-json" extends="json-default">
		<!--普通用户登陆-->
		<action name="loginAction" class="loginAction">
			<result type="json">
				<param name="root">result</param>
			</result> 
		</action>
		<action name="signinAction" class="signinAction">
			<result name="success">/mainpage.jsp</result>
		</action>
		<action name="signoutAction" class="signoutAction">
			<result name="success">/mainpage.jsp</result>
		</action>
		<action name="countAction" class="countAction">
			<result name="success">/count.jsp</result>
		</action>
		<action name="getDepartsAction" class="getDepartsAction">
			<result type="json">
				<param name="root">result</param>
			</result> 
		</action>
		<action name="getClertsAction" class="getClertsAction">
			<result type="json">
				<param name="root">result</param>
			</result> 
		</action>
		<action name="getDetailAction" class="getDetailAction">
			<result type="json">
				<param name="root">result</param>
			</result> 
		</action>
		<action name="getDownloadAction" class="getDownloadAction">
			<result type="json">
				<param name="root">result</param>
			</result> 
		</action>
		<action name="getWorkdayAction" class="getWorkdayAction">
			<result name="success">/workday.jsp</result>
		</action>
		<action name="updateWorkdayAction" class="updateWorkdayAction">
			<result name="success">/workday.jsp</result>
		</action>
		<action name="signAction" class="signAction">
			<result name="success">/mainpage.jsp</result>
		</action>
		
	</package>
	
</struts>